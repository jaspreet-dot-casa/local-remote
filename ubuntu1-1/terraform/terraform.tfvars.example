# =============================================================================
# Terraform Variables Example
#
# Copy this file to terraform.tfvars and customize for your environment.
# =============================================================================

# Libvirt connection (default: local system)
# libvirt_uri = "qemu:///system"
# libvirt_uri = "qemu+ssh://user@host/system"  # Remote host

# Storage pool (must exist in libvirt)
storage_pool = "default"

# Network (must exist in libvirt)
network_name = "default"

# VM Configuration
vm_name      = "ubuntu-server"
memory_mb    = 4096
vcpu_count   = 4
disk_size_gb = 40
autostart    = true

# Ubuntu cloud image path
# Download from: https://cloud-images.ubuntu.com/jammy/current/
ubuntu_image_path = "/var/lib/libvirt/images/jammy-server-cloudimg-amd64.img"

# Cloud-init file (generated by ../cloud-init/generate.sh)
cloud_init_file = "../cloud-init/cloud-init.yaml"
