# Full Configuration for Testing
#
# This fixture contains all configuration values including optional ones.

# =============================================================================
# User Configuration
# =============================================================================

USER_NAME="Test User"
USER_EMAIL="test@example.com"
USER_USERNAME="testuser"

# =============================================================================
# Git Configuration
# =============================================================================

GIT_DEFAULT_BRANCH="main"
GIT_PUSH_AUTO_SETUP_REMOTE=true
GIT_PULL_REBASE=true
GIT_PAGER="delta"
GIT_EDITOR="nvim"

# =============================================================================
# Tailscale Configuration
# =============================================================================

TAILSCALE_SSH_ENABLED=true
TAILSCALE_EXIT_NODE_ADVERTISE=true
TAILSCALE_SSH_CHECK_PERIOD="12h"

# =============================================================================
# Package Configuration
# =============================================================================

# Each package can be enabled/disabled and version pinned
PACKAGE_LAZYGIT_ENABLED=true
PACKAGE_LAZYGIT_VERSION="latest"

PACKAGE_LAZYDOCKER_ENABLED=true
PACKAGE_LAZYDOCKER_VERSION="latest"

PACKAGE_STARSHIP_ENABLED=true
PACKAGE_STARSHIP_VERSION="latest"

PACKAGE_DELTA_ENABLED=true
PACKAGE_DELTA_VERSION="0.16.5"

PACKAGE_ZELLIJ_ENABLED=true
PACKAGE_ZELLIJ_VERSION="latest"

PACKAGE_ZOXIDE_ENABLED=true
PACKAGE_ZOXIDE_VERSION="latest"

PACKAGE_BTOP_ENABLED=true
PACKAGE_BTOP_VERSION="latest"

PACKAGE_YQ_ENABLED=true
PACKAGE_YQ_VERSION="latest"

# =============================================================================
# Docker Configuration
# =============================================================================

DOCKER_ADD_TO_GROUP=true
DOCKER_START_ON_BOOT=true

# =============================================================================
# Shell Configuration
# =============================================================================

SHELL_DEFAULT="zsh"
SHELL_ZSH_THEME="robbyrussell"
